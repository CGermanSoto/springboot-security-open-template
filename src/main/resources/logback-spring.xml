<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application Loggers -->
    <logger name="com.spacecodee.springbootsecurityopentemplate.security" level="DEBUG"/>
    <logger name="com.spacecodee.springbootsecurityopentemplate.language" level="DEBUG"/>

    <!-- Security specific loggers -->
    <logger
            name="com.spacecodee.springbootsecurityopentemplate.security.authentication.filter.LocaleResolverFilter"
            level="DEBUG"/>
    <logger
            name="com.spacecodee.springbootsecurityopentemplate.security.authentication.filter.JwtAuthenticationFilter"
            level="DEBUG"/>

    <!-- Framework Loggers -->
    <logger name="org.springframework.security" level="DEBUG"/>
    <logger name="org.springframework.web" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="Console"/>
    </root>
</configuration>